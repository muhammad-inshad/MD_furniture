<title>Order Success - MD-furniture</title>
<style>
    /* Cancel Order Link Styling */
.cancel-order-link {
    font-size: 16px;
    color: #e74c3c;  /* Red color to indicate cancellation */
    text-decoration: none;
    font-weight: bold;
    padding: 10px;
    display: inline-block;
    border-radius: 5px;
    transition: background-color 0.3s ease;
}

.cancel-order-link:hover {
    background-color: #f2dede;
    color: #c0392b;
}
/* Input Field Styling */
input[type="text"] {
    padding: 10px;
    font-size: 16px;
    width: 100%;
    border: 1px solid #ccc;
    border-radius: 5px;
    margin-bottom: 20px;
}
input[type="text"]:focus {
    border-color: #3498db;
    outline: none;
}
/* Increase the size of the icon */
.icon-large {
    font-size: 50px;  /* Increase the size */
    width: 60px;      /* Increase the width */
    height: 60px;     /* Increase the height */
    display: inline-block; /* Ensures the icon is treated as a block element */
}


</style>
<body>
    <form action="/user/ReturnRequestApOrRe" method="post">
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="text-center">
        

            <div class="mb-4">
                <i class="bi bi-patch-question icon-large"></i>
              </div>
              

              <h4>Your reason, please:</h4>
          <input type="text" value="<%=id%>" name="id" hidden>
        
          <input type="text" name="orderDetails" id="orderDetails" class="form-control mb-3" placeholder="Enter your reason">
            <button class="btn bg-danger">Request to return</button>
</form>
          <div class="mt-4">
            <a href="/user/myorders" class="btn btn-primary">View My Orders</a>
            <a href="/user/shop" class="btn btn-secondary">Continue Shopping</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  
    <script>
document.addEventListener("DOMContentLoaded", function() {
    document.querySelector("form").addEventListener("submit", function(event) {
        const inputField = document.getElementById("orderDetails");
        const inputValue = inputField.value.trim();

        // Count words
        const wordCount = inputValue.split(/\s+/).filter(word => word.length > 0).length;

        if (inputValue === "") {
            Swal.fire({
                icon: "error",
                title: "Oops...",
                text: "Please enter a reason before submitting!",
            });
            event.preventDefault(); // Prevent form submission
        } else if (wordCount > 16) {
            Swal.fire({
                icon: "error",
                title: "Too many words!",
                text: "Your reason must be 16 words or fewer.",
            });
            event.preventDefault(); // Prevent form submission
        }
    });
});
</script>



