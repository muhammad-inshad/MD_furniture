<%- include("../../views/partials/user/top") %>

<!-- Bootstrap CSS -->
<link href="css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
<link href="/css/style.css" rel="stylesheet">

<title>Order Success - MD-furniture</title>

<body>
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="text-center">
          <h2 class="mb-4">Order Successfully Placed!</h2>
          <p class="mb-3">Thank you for your order! Your order has been successfully placed and is being processed.</p>

          <div class="mb-4">
            <i class="fas fa-check-circle fa-5x text-success"></i>
          </div>

          <h4>Your Order Details:</h4>
          <p><strong>Payment Method:</strong> <%= paymentMethod %></p>
          <p><strong>Estimated Delivery Date:</strong> <%= formattedExpectedDate %></p>

          <div class="mt-4">
            <a href="/user/myorders" class="btn btn-primary">View My Orders</a>
            <a href="/user/shop" class="btn btn-secondary">Continue Shopping</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- SweetAlert2 CDN -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script src="js/bootstrap.bundle.min.js"></script>
  <script src="js/tiny-slider.js"></script>
  <script src="js/custom.js"></script>

  <%- include("../../views/partials/user/footer") %>
</body>
