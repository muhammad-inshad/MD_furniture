<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Details</title>
    <link href="/admin/viewProdect.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Y4oA5ZP+evVVNABb88X0DYqKlH0IvMl9r1NVQx6aOSlBaK2LT/hHq2Grkn3rSTz8" crossorigin="anonymous">

</head>
<body>
    <div class="container">
        <!-- Header -->
        <header class="header">
            <h1>Product Details</h1>
            <a href="/admin/productManagement" class="back-button">Back to Product Management</a>
        </header>

        <!-- Product Image Section -->
        <div class="product-images">
            <h2>Product Images</h2>
            <div class="images-container">
            
                <% if (product.productImages && product.productImages.length > 0) { %>
                    <div class="image-grid">
                        <% product.productImages.forEach((image, index) => { %>
                            <div class="image-item">
                                <img class="photos" src="/uploads/<%= image %>" alt="Product Image <%= index + 1 %>" />
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <p>No images available</p>
                <% } %>
            </div>
        </div>

        <!-- Product Information Section -->
        <div class="product-info">
            <h2>Product Information</h2>
            <p><strong>Name:</strong> <span id="product-name"><%= product.productName %></span></p>
            <p><strong>Brand:</strong> <span id="product-brand"><%= product.brand %></span></p>
            <p><strong>Category:</strong> <span id="product-category"><%= product.category.name %></span></p>

            <p><strong>Description:</strong></p>
            <p id="product-description">
                <%= product.description %>
            </p>
            <p><strong>salePrice:</strong> <span id="product-price"><%= product.salePrice %></span></p>
            <p><strong>productOffer:</strong> <span id="product-price"><%= product.productOffer %></span></p>
            <p><strong>Stock:</strong> <span id="product-stock"><%= product.quantity %></span></p>
            <p><strong>Status:</strong> <span id="product-status"><%= product.status %></span></p>
        </div>
    </div>
</body>
</html>
